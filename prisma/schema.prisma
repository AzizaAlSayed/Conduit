generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  userid   String    @id @default(uuid())
  username String
  password String
  email    String
  Article  Article[]
}

model Article {
  articleid String @id @default(uuid())
  writerid  String
  writer    User   @relation(fields: [writerid], references: [userid], onDelete: Cascade)
  title     String
  bio       String
}
