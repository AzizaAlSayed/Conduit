generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  userid   String    @id @default(uuid())
  userName String
  articls  Article[]
}

model Article {
  articleid Int    @id @default(autoincrement())
  comment   String
  writer    User   @relation(fields: [writerId], references: [userid])
  writerId  String
}
